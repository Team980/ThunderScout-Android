<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="100dp"
    android:background="?attr/selectableItemBackground">

    <TextView
        android:id="@+id/match_number"
        android:layout_width="70dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:gravity="center"
        android:text="1"
        android:textAppearance="@style/TextAppearance.AppCompat.Body2"
        android:textSize="36sp" />

    <android.support.v7.widget.GridLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:columnCount="3"
        app:orientation="horizontal"
        app:rowCount="2">

        <TextView
            android:id="@+id/match_red1"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:background="@color/alliance_red_primary"
            app:layout_columnWeight="1"
            app:layout_rowWeight="1"
            android:text="Red 1"
            android:gravity="center"
            android:textAppearance="@style/TextAppearance.AppCompat.Body1"
            android:textSize="24sp"/>

        <TextView
            android:id="@+id/match_red2"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:background="@color/alliance_red_primary_dark"
            app:layout_columnWeight="1"
            app:layout_rowWeight="1"
            android:text="Red 2"
            android:gravity="center"
            android:textAppearance="@style/TextAppearance.AppCompat.Body1"
            android:textSize="24sp"/>

        <TextView
            android:id="@+id/match_red3"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:background="@color/alliance_red_primary"
            app:layout_columnWeight="1"
            app:layout_rowWeight="1"
            android:text="Red 3"
            android:gravity="center"
            android:textAppearance="@style/TextAppearance.AppCompat.Body1"
            android:textSize="24sp"/>

        <TextView
            android:id="@+id/match_blue1"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:background="@color/alliance_blue_primary"
            app:layout_columnWeight="1"
            app:layout_rowWeight="1"
            android:text="Blue 1"
            android:gravity="center"
            android:textAppearance="@style/TextAppearance.AppCompat.Body1"
            android:textSize="24sp"/>

        <TextView
            android:id="@+id/match_blue2"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:background="@color/alliance_blue_primary_dark"
            app:layout_columnWeight="1"
            app:layout_rowWeight="1"
            android:text="Blue 2"
            android:gravity="center"
            android:textAppearance="@style/TextAppearance.AppCompat.Body1"
            android:textSize="24sp" />

        <TextView
            android:id="@+id/match_blue3"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:background="@color/alliance_blue_primary"
            app:layout_columnWeight="1"
            app:layout_rowWeight="1"
            android:text="Blue 3"
            android:gravity="center"
            android:textAppearance="@style/TextAppearance.AppCompat.Body1"
            android:textSize="24sp" />


    </android.support.v7.widget.GridLayout>

</LinearLayout>