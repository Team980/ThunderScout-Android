<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/background_floating"
        android:padding="16dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="Teleop"
            android:textAppearance="@style/TextAppearance.AppCompat.Title"
            android:textSize="25sp" />

    </FrameLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="16dp"
        android:paddingRight="16dp"
        android:paddingTop="8dp"
        android:text="Avg. Power Cubes Delivered To..."
        android:textColor="?android:attr/textColorPrimary"
        android:textSize="22sp" />

    <android.support.v7.widget.GridLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="8dp"
        android:paddingLeft="16dp"
        android:paddingRight="16dp"
        app:columnCount="2"
        app:orientation="horizontal"
        app:rowCount="2">

        <TextView
            android:text="Alliance Switch"
            android:textSize="22sp"
            app:layout_columnWeight="1" />

        <TextView
            android:id="@+id/info_team_teleopPowerCubeAllianceSwitchAverage"
            android:gravity="right"
            android:textSize="22sp"
            app:layout_columnWeight="1"
            tools:text="0.0" />

        <TextView
            android:text="Central Scale"
            android:textSize="22sp"
            app:layout_columnWeight="1" />

        <TextView
            android:id="@+id/info_team_teleopPowerCubeScaleAverage"
            android:gravity="right"
            android:textSize="22sp"
            app:layout_columnWeight="1"
            tools:text="0.0" />

        <TextView
            android:text="Opposing Switch"
            android:textSize="22sp"
            app:layout_columnWeight="1" />

        <TextView
            android:id="@+id/info_team_teleopPowerCubeOpposingSwitchAverage"
            android:gravity="right"
            android:textSize="22sp"
            app:layout_columnWeight="1"
            tools:text="0.0" />

        <TextView
            android:paddingBottom="16dp"
            android:text="Player Station"
            android:textSize="22sp"
            app:layout_columnWeight="1" />

        <TextView
            android:id="@+id/info_team_teleopPowerCubePlayerStationAverage"
            android:gravity="right"
            android:textSize="22sp"
            app:layout_columnWeight="1"
            tools:text="0.0" />

        <TextView
            android:text="Climbing Success"
            android:textColor="?android:attr/textColorPrimary"
            android:textSize="22sp"
            app:layout_columnWeight="1" />

        <TextView
            android:id="@+id/info_team_teleopClimbPercentage"
            android:gravity="right"
            android:textSize="22sp"
            app:layout_columnWeight="1"
            tools:text="0%" />

        <TextView
            android:text="Supported Other Robots"
            android:textSize="22sp"
            app:layout_columnWeight="1" />

        <TextView
            android:id="@+id/info_team_teleopSupportedRobotPercent"
            android:gravity="right"
            android:textSize="22sp"
            app:layout_columnWeight="1"
            tools:text="0%" />

    </android.support.v7.widget.GridLayout>

</LinearLayout>